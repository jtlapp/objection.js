{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "target": "es6",
    "rootDir": "src",
    "outDir": "lib"
  }
}